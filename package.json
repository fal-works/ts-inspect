{
	"name": "@fal-works/ts-inspect",
	"version": "0.1.0",
	"description": "Auxiliary inspector/linter to improve TypeScript code quality.",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"bin": "./dist/bin.js",
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "tsdown",
		"test": "npm run test:unit && npm run test:integration",
		"test:unit": "node --test src/**/*.test.ts",
		"test:integration": "npm run build && node --test test/**/*.test.ts",
		"lint": "biome check",
		"lint:fix": "biome check --fix",
		"check:types": "tsc --noEmit -p tsconfig.json",
		"check": "npm run check:types && npm run lint",
		"fix": "npm run check:types && npm run lint:fix",
		"prepublishOnly": "npm run check:types && npm run lint && npm run test"
	},
	"keywords": [
		"typescript",
		"linter"
	],
	"author": "FAL",
	"license": "Apache-2.0",
	"engines": {
		"node": ">=22.0.0"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/node": "^24.3.0",
		"tsdown": "^0.14.1",
		"typescript": "~5.0.0"
	},
	"peerDependencies": {
		"typescript": ">=5.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fal-works/ts-inspect.git"
	},
	"homepage": "https://github.com/fal-works/ts-inspect#readme"
}
